<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.irains.pushdemo.app" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:persistent="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.irains.pushdemo.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.androidpn.client.NotificationDetailsActivity"
            android:label="Notification Details" >
        </activity>
        <activity
            android:name="org.androidpn.client.NotificationSettingsActivity"
            android:label="Notification Settings" >
        </activity>

        <service
            android:name="org.androidpn.client.NotificationService"
            android:enabled="true"
            android:label="NotificationService" >
            <intent-filter>
                <action android:name="org.androidpn.client.NotificationService" />
            </intent-filter>
        </service>
        <service
            android:name="cn.irains.pushdemo.app.service.PushService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="cn.irains.pushdemo.app.user.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="cn.irains.pushdemo.app.NotifyListActivity"
            android:label="@string/title_activity_notify_list" >
        </activity>
        <activity
            android:name="cn.irains.pushdemo.app.NotifySettingsActivity"
            android:label="@string/title_activity_notify_setting" >
        </activity>
        <activity
            android:name="cn.irains.pushdemo.app.NotifyDetailActivity"
            android:label="@string/title_activity_notify_detail" >
        </activity>

        <receiver android:name="cn.irains.pushdemo.app.notify.NotifyReceiver" >
            <intent-filter>
                <action android:name="cn.irains.pushdemo.app.SHOW_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <activity
            android:name="cn.irains.pushdemo.app.ConfigureActivity"
            android:label="@string/title_activity_configure" >
        </activity>
    </application>

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
